{
  "compilerOptions": {
    "target": "ES2024",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    // Module
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true, // https://github.com/microsoft/TypeScript/issues/47862
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true, // Windows...
    "resolveJsonModule": true,

    // Output
    "declaration": true,
    //"noEmitOnError": true,

    //"allowImportingTsExtensions": true,
    // https://zenn.dev/uhyo/articles/rewrite-relative-import-extensions-read-before-use
    "rewriteRelativeImportExtensions": true,

    // Linting
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedSideEffectImports": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "erasableSyntaxOnly": true,
    "isolatedDeclarations": true,

    "skipLibCheck": false,
    "types": [
      "node"
    ]
  },
  // "include": [
  //   "src/**/*.ts",
  //   "scripts/**/*.ts",
  // ],
}
